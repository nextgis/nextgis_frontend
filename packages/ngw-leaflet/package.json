{
  "name": "@nextgis/ngw-leaflet",
  "_priority": 10,
  "version": "1.0.0-alpha.3",
  "description": "Single-file bundle for rapid deployment of Laeflet-based web-gis applications with NextGIS services",
  "main": "lib/ngw-leaflet.global.prod.js",
  "module": "lib/ngw-leaflet.esm-bundler.js",
  "unpkg": "lib/ngw-leaflet.global.prod.js",
  "jsdelivr": "lib/ngw-leaflet.global.prod.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@nextgis/leaflet-map-adapter": "^1.0.0-alpha.3",
    "@nextgis/ngw-map": "^1.0.0-alpha.3",
    "leaflet": "1.6.0",
    "leaflet.wms": "^0.2.0"
  },
  "devDependencies": {
    "@nextgis/build-tools": "file:../build-tools"
  },
  "buildOptions": {
    "name": "NgwLeaflet",
    "injectCss": true,
    "#alias": [
      {
        "find": "^leaflet$",
        "replacement": "leaflet/dist/leaflet-src.esm"
      }
    ],
    "formats": [
      "esm-bundler",
      "esm-browser",
      "global"
    ]
  },
  "scripts": {
    "clean": "rimraf ./lib",
    "dev": "node ../build-tools/lib/build.js",
    "prod": "npm run dev -- --release",
    "lint": "eslint ./src/**/*.ts --fix --c ../../.eslintrc",
    "watch": "npm run dev -- --watch"
  },
  "keywords": [
    "NextGIS",
    "MAP"
  ],
  "author": "NextGIS",
  "files": [
    "index.js",
    "lib"
  ],
  "license": "LGPL-3.0",
  "homepage": "https://github.com/nextgis/nextgis_frontend/tree/master/packages/ngw-leaflet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nextgis/nextgis_frontend.git"
  },
  "bugs": {
    "url": "https://github.com/nextgis/nextgis_frontend/issues"
  }
}
