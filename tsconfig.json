{
  "compilerOptions": {
    /* Basic Options */
    "baseUrl": ".",
    "sourceMap": false,
    // "target": "es5",
    // "module": "es2015",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "rootDir": ".",

    // "emitDecoratorMetadata": true,
    // "noImplicitReturns": false,

    "paths": {
      "@nextgis/*": ["./packages/*/src/"]
    }
  },
  "includes": [
    "packages/global.d.ts",
    "packages/*/src"
  ]
}
