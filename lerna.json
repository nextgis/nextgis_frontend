{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "1.0.0-alpha.0",
  "command": {
    "version": {
      "message": "chore(release): publish %s"
    },
    "run": {
      "ignore": ["@nextgis/demo-app", "@nextgis/build-tools", "@nextgis/eslint-config"]
    },
    "publish": {
      "ignore":["@nextgis/frontend_test", "@nextgis/demo-app"]
    }
  }
}
