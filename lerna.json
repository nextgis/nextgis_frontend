{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "version": "2.0.0-alpha.0",
  "command": {
    "version": {
      "message": "chore(release): publish %s"
    },
    "run": {
      "ignore": [
        "@nextgis/demo-app",
        "@nextgis/build-tools",
        "@nextgis/eslint-config"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "@nextgis/frontend_test",
        "@nextgis/demo-app"
      ]
    }
  }
}
