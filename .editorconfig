root = true

[*]
insert_final_newline = true
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 80
spaces_around_brackets = true
end_of_line = lf

[*{.ts,.js}]
indent_size = 2
quote_type = single

[*{.scss,.less}]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2
