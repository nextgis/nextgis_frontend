{
  "name": "root",
  "private": true,
  "scripts": {
    "clean": "lerna run clean",
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev",
    "build": "lerna run build",
    "prod": "lerna run prod",
    "prod_script": "node ./webpack.conf.js",
    "demo": "yarn run examples && cd ./packages/demo/ && yarn run build",
    "examples": "node ./build/updateExamples.js",
    "test": "npm run karma -- --single-run --coverage",
    "karma": "karma start test/karma.conf.js",
    "docs": "rimraf docs && typedoc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "publish": "lerna publish from-package",
    "patch": "lerna version patch --conventional-commits -m \"chore(release): publish %s\" --no-push --create-release github",
    "minor": "lerna version minor --conventional-commits -m \"chore(release): publish %s\" --no-push --create-release github"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^7.5.2",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "conventional-changelog-cli": "^2.0.31",
    "eslint": "^6.8.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-mocha": "^1.3.0",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.10",
    "mocha": "^7.1.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "ts-loader": "^6.2.2",
    "typedoc": "^0.17.3",
    "typedoc-plugin-lerna-packages": "^0.3.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "#pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --fix",
      "git add"
    ]
  },
  "license": "LGPL-3.0",
  "workspaces": [
    "packages/*"
  ]
}
