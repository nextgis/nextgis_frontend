{
  "name": "root",
  "private": true,
  "scripts": {
    "clean": "lerna run clean",
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev",
    "build": "lerna run build",
    "prod": "lerna run prod",
    "prod_script": "node ./webpack.conf.js",
    "demo": "yarn run examples && cd ./packages/demo/ && yarn run build",
    "examples": "node ./build/updateExamples.js",
    "test": "npm run karma -- --single-run --coverage",
    "karma": "karma start test/karma.conf.js",
    "doc": "typedoc --options ./typedoc.json ./packages",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@nextgis/eslint-config": "^0.21.0",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.1",
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "conventional-changelog-cli": "^2.0.31",
    "cryptiles": ">=4.1.3",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.1.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-mocha": "^1.3.0",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "topological-sort": "^0.3.0",
    "ts-loader": "^6.2.1",
    "typedoc": "^0.15.5",
    "typedoc-plugin-external-module-name": "^2.1.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "#pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --fix",
      "git add"
    ]
  },
  "license": "LGPL-3.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {}
}
